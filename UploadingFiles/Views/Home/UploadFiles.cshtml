@model UploadFilesViewModel
@{
    ViewData["Title"] = "Privacy Policy";
}

@{ 
    if(Model.WrongTypeFiles.Count > 0)
    {
    <h4 style="color: red;">Wrong file type</h4>
        <ul>
            @{ 
                foreach (string filename in Model.WrongTypeFiles)
                {
                    <li>@filename</li>
                }
            }
        </ul>
    }
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadImages">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="UploadImages">
        </div>
    </div>
</form>

@{
    if (Model != null)
    {
        foreach (var image in Model.Images)
        {
            <img class="img" src="~/Uploads/Images/@image" alt="image" width="300"/>
        }
    }
}
